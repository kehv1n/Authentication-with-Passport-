<h1> Add a New Room! </h1>

<% if (message) { %>
    <p class="success">
        <%= message %>
    </p>
    <% } %>

  <form action = "/rooms" method = "post" enctype = "multipart/form-data">

      <div>
          <label for="name-input"> Name </label>
          <input id="name-input" type="text" name="name">
      </div>

      <div>
          <label for="desc-input"> Description </label>
          <input id="desc-input" type="text" name="desc">
      </div>

      <div>
          <label for="picture-input"> Picture </label>
          <input id="picture-input" type="file" name="picture">
      </div>

      <button> Add Room </button>

  </form>

<ul>
  <li> <a href = "/my-rooms"> Your Rooms </a>
</ul>
